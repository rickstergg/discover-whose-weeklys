doctype html
html
  head
    title= "Done constructing the master playlist!!"
    link(rel="stylesheet", href="/styles/tables.css")
  body
    if error
      h1 There was an error: #{error}
    else
      h1= "Here are the songs:"
      table
        thead
          tr
            th Song Name
            th Artist(s)
            th Whose is it?
        tbody
          each song in songList
            tr
              td= song.name
              td= song.artists
              td= song.owner
